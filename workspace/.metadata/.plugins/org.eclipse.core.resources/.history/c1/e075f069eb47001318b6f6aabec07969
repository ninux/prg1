package maxSubSum;

import java.util.ArrayList;
import java.util.Random;

public class Main
{
	public static void main(String[] args)
	{
		int[] mySeq = new int[]{5, -8, 3, 4, -5, 7, -2, -7, 3, 5};
		System.out.println("The maximum sum is " + maxSubtotal(mySeq));
	
		Random rand = new Random();
		for(int i = 0; i < mySeq.length; i++){
			mySeq[i] = rand.nextInt(19)-10;
		}
	}
	
	public static int maxSubtotal(int[] sequence){

		int max = 0;
		
		for(int i = 0; i < sequence.length; i++){
			int subtotal = 0;
			// System.out.print("{ ");
			for(int a = 0; a <= i; a++){
				subtotal += sequence[a];
				// System.out.print(sequence[a] + ", ");
			}
			if(subtotal > max){
				max = subtotal;
			}
			// System.out.print("} = " + subtotal);
			// System.out.println("");
		}
		
		for(int i = 1; i < sequence.length; i++){
			int subtotal = 0;
			// System.out.print("{ ");
			for(int a = 0+i; a < sequence.length; a++){
				subtotal += sequence[a];
				// System.out.print(sequence[a] + ", ");
			}
			if(subtotal > max){
				max = subtotal;
			}
			// System.out.print("} = " + subtotal);
			// System.out.println("");
		}
		return max;
	}
}