package maxSubSum;

import java.util.Random;

public class Main
{
	public static void main(String[] args)
	{	
		// this is the sequence given by the exercise
		int[] mySeq = new int[]{5, -8, 3, 4, -5, 7, -2, -7, 3, 5};
		maxSubtotal(mySeq);
	
		mySeq = getRandomArray(mySeq, 10, true);
		maxSubtotal(mySeq);
	}
	
	public static int maxSubtotal(int[] sequence){

		int max = 0;
		
		for(int i = 0; i < sequence.length; i++){
			int subtotal = 0;
			// System.out.print("{ ");
			for(int a = 0; a <= i; a++){
				subtotal += sequence[a];
				// System.out.print(sequence[a] + ", ");
			}
			if(subtotal > max){
				max = subtotal;
			}
			// System.out.print("} = " + subtotal);
			// System.out.println("");
		}
		
		for(int i = 1; i < sequence.length; i++){
			int subtotal = 0;
			// System.out.print("{ ");
			for(int a = 0+i; a < sequence.length; a++){
				subtotal += sequence[a];
				// System.out.print(sequence[a] + ", ");
			}
			if(subtotal > max){
				max = subtotal;
			}
			// System.out.print("} = " + subtotal);
			// System.out.println("");
		}
		System.out.println("The maximum sum is " + max);
		return max;
	}
	
	public static int[] getRandomArray(int[] array, int range, boolean signed){
		if(signed){
			Random rand = new Random();
			for(int i = 0; i < array.length; i++){
				array[i] = rand.nextInt(range)-(range/2);
			}
			return array;
		} else{
			Random rand = new Random();
			for(int i = 0; i < array.length; i++){
				array[i] = rand.nextInt(range);
			}
			return array;
		}
	}
}